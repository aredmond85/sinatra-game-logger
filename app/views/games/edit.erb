<h1>Welcome to Edit</h1>

<form method="post" action="/games/<%=@game.id%>">
  <input id="hidden" type="hidden" name="_method" value="patch" />

  <label for="title">Title</label>
  <input type="text" id="title" name="title" value="<%=@game.title%>" />

  <label for="console">Console</label>
  <input type="text" id="console" name="console" value="<%=@game.console%>" />

  <label for="status">Status</label>
  <input type="text" id="status" name="status" value="<%=@game.status%>" />

  <input type="submit" value="Update" />
</form>

<form action="/games/<%= @game.id %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" value="Delete Game">
</form>

<form action="/logout" method="post">
  <br><input type="submit" name="logout" value="Log Out" >
</form>